{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
   "title": {"text": "World Happiness Report - 2020", "anchor":"start","font": "Lato","color": "gray"},
    "config": {"legend": {"titleFont": "Lato"}},
  "width": 860,
    "height": 400,
        "background": "#f3fafa",
     "view": {"fill": "#EBF7F7"},
  "projection": {
    "type": "naturalEarth1",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "params": [
    {
      "name": "zoom_level",
      "value": 150,
      "bind": {
        "input": "range",
        "min": 150,
        "max": 600,
        "step": 50,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [0,0],
      "bind": {
        "input": "select",
        "options": [
          [0, 0],
          [116.383331,39.916668],
          [42.5510,29.2985],
          [25,60],
          [26.302321, -10.833306],
          [-78.181459,35.391289],
          [-32.189164,-8.305265],        
          [157.061036,-23.563987]
        ],
        "labels": ["World","Central & East Asia","Middle East & Northern Africa","Central & Western Europe", "Central & Southern Africa","Northern & Central America","South America","Oceania"],
        "name": "Map Centre: "
      }
    }
  ],
  "layer": [
    
    {
      "data": {
        "url": "https://raw.githubusercontent.com/belinda-chan/Assignment2/main/data/Geodata.json",
        "format": {"type": "topojson", "feature": "Geodata"}
      },
      "transform": [
         {
           "calculate": "'Data is not available in ' + datum.properties.name",
           "as": "note"
         }
      ],
"mark": {"type": "geoshape", "fill": "#c4c4c4","stroke": "gray", "strokeWidth": 0.25},
       "encoding": {"tooltip": {"field":"note"}}},
    {
      "data": {
        "url": "https://raw.githubusercontent.com/belinda-chan/Assignment2/main/data/World%20Happiness%20Index.csv"
      },
      "transform": [
        {
          "lookup": "Country name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/belinda-chan/Assignment2/main/data/Geodata.json",
              "format": {
                "type": "topojson",
                "feature": "Geodata"
              }
            },
            "key": "properties.name"
          },
          "as": "geo"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "gray", "strokeWidth": 0.25},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Ladder score",
          "type": "quantitative",
          "sort": "descending",
          "condition": {"test": "datum['Ladder score'] < 0.1", "value": "#C4C4C4"},
          "scale": {"domain": [2,8],"range": ["#ECFFA5","#E786A4","#3564BF"]}
        },         "tooltip": [
           {
             "field": "Country name",
             "type": "nominal",
             "title": "Country"
           },
           {"field": "Rank", "type": "quantitative"},
           {
             "title": "Ladder score",
             "field": "Ladder score",
             "type": "quantitative",
             "format":".2f"
           }
         ]
      }
    }
  ]
}